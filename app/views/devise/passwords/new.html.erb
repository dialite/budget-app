<div class="resend-msg">
  <%= form_for(resource, as: resource_name, data: { turbo:false }, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="menu">
      <%= render partial: 'partials/home', locals: {title: 'RESET PASSWORD', back_path: root_path } %>
      <%= f.submit "Reset password", { class: "resend-actions" }%>
    </div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "resend-entry"  %>
    <%= render "devise/shared/error_messages", resource: resource %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>