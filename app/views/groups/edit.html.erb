<h1>Editing group</h1>
<div class="menu">
  <%= render partial: 'partials/menu', locals: { title: 'Edit Group', menu_path: root_path } %>
</div>

<section class="edit_add_page group">
  <%= form_with model: @group, url: group_path(id: @group.id), local: true do |f| %>
    <%= f.text_field :name, autofocus: true %>
    <%= f.file_field :icon %>
    <div class="form-btn">
      <%= f.submit "Update group", class:'list_btn' %>
      <button class="list_btn"> <%= link_to "Back to group", group_path(id: @group.id) %></button>
    </div>
  <% end %>
</section>
